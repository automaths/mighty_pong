{
    "env": {
        "browser": true,
        "es2021": true
    },
    "overrides": [
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ],
        "prefer-const": "error",
        "no-unused-expressions": "error",
        "no-unused-vars": "error",
        "no-trailing-spaces": "error",
        "require-await": "error",
        "no-useless-return": "error",
        "no-else-return": "error"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
